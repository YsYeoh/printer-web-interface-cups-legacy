<%- include('layouts/main-start') %>
<div class="row">
    <div class="col-12">
        <h1>Upload Files</h1>
        <p class="lead">Upload PDF, images, or PostScript files for printing</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Upload File</h5>
                <div id="uploadZone" class="upload-zone">
                    <input type="file" id="fileInput" style="display: none;" accept=".pdf,.jpg,.jpeg,.png,.gif,.ps,.eps">
                    <p id="fileInfo">Drag and drop a file here or click to select</p>
                    <p class="text-muted small">Supported formats: PDF, JPEG, PNG, GIF, PostScript (Max 50MB)</p>
                </div>
                <div class="mt-3 text-center">
                    <button id="uploadButton" class="btn btn-primary" disabled>Upload</button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Note</h5>
                <p class="text-muted small">
                    Files are uploaded temporarily and will be automatically deleted after printing. 
                    No files are stored permanently.
                </p>
            </div>
        </div>
    </div>
</div>

<script src="/js/upload.js"></script>
<%- include('layouts/main-end') %>


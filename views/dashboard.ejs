<%- include('layouts/main-start') %>
<div class="row">
    <div class="col-12">
        <h1>Dashboard</h1>
        <p class="lead">Welcome, <%= user.username %>!</p>
    </div>
</div>

<div class="row mt-4">
    <!-- CUPS Status Panel -->
    <div class="col-md-12 mb-4">
        <div class="card" id="cupsStatusPanel">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">CUPS Status</h5>
                <span class="status-badge badge badge-secondary">Loading...</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="status-message mb-2">Loading status...</p>
                        <small class="text-muted">Status updates every 30 seconds</small>
                    </div>
                    <div class="col-md-6">
                        <h6>Available Printers (<span class="printer-count">0</span>)</h6>
                        <div class="printers-list">
                            <p class="text-muted mb-0">Loading...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Print Documents</h5>
                <p class="card-text">Upload, preview, and print PDF, images, or PostScript files.</p>
                <a href="/print" class="btn btn-primary">Go to Print</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Print Queue</h5>
                <p class="card-text">View and manage active print jobs and job history.</p>
                <a href="/queue" class="btn btn-primary">View Queue</a>
            </div>
        </div>
    </div>
    <% if (user.role === 'Admin') { %>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Management</h5>
                <p class="card-text">Manage user accounts and permissions.</p>
                <a href="/admin/users" class="btn btn-primary">Manage Users</a>
            </div>
        </div>
    </div>
    <% } %>
</div>

<script src="/js/cups-status.js"></script>
<%- include('layouts/main-end') %>


<%- include('layouts/main-start') %>
<style>
.queue-page {
    padding: 20px 0;
}

.job-status-badge {
    font-size: 0.85em;
    padding: 0.25em 0.5em;
}

.job-actions {
    white-space: nowrap;
}

.job-actions .btn {
    margin-right: 5px;
    margin-bottom: 5px;
}

.job-table {
    font-size: 0.9em;
}

.job-table th {
    background-color: #f8f9fa;
    font-weight: 600;
}

.refresh-indicator {
    display: inline-block;
    margin-left: 10px;
}

.refresh-indicator.spinning {
    animation: spin 1s linear infinite;
}

@keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

.empty-state {
    text-align: center;
    padding: 40px 20px;
    color: #6c757d;
}
</style>

<div class="container-fluid queue-page">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Print Job Queue</h1>
                <div>
                    <button class="btn btn-sm btn-outline-secondary" id="refreshBtn">
                        <span class="refresh-icon">â†»</span> Refresh
                    </button>
                    <a href="/dashboard" class="btn btn-sm btn-outline-primary">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <!-- Active Jobs -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Active Print Jobs</h5>
                </div>
                <div class="card-body">
                    <div id="activeJobsContainer">
                        <div class="empty-state">
                            <p>Loading active jobs...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Job History -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Job History</h5>
                </div>
                <div class="card-body">
                    <div id="historyJobsContainer">
                        <div class="empty-state">
                            <p>Loading job history...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/queue.js"></script>
<%- include('layouts/main-end') %>

